# ===========================================
# Master's Insight AI - 환경 변수 설정
# ===========================================

# 앱 URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ===========================================
# Supabase (PostgreSQL)
# ===========================================
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ===========================================
# NextAuth.js
# ===========================================
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_key_here

# ===========================================
# Google Gemini AI
# ===========================================
GOOGLE_AI_API_KEY=your_google_ai_api_key

# ===========================================
# Pinecone (RAG)
# ===========================================
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_INDEX_NAME=saju-knowledge

# ===========================================
# Stripe (결제)
# ===========================================
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# ===========================================
# Python API (만세력 엔진)
# ===========================================
PYTHON_API_URL=http://localhost:8000

# ===========================================
# AWS S3 (이미지 저장)
# ===========================================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=your_s3_bucket_name
AWS_REGION=ap-northeast-2

# ===========================================
# Redis (캐싱) - 선택사항
# ===========================================
REDIS_URL=your_redis_url

# ===========================================
# Sentry (에러 모니터링) - 선택사항
# ===========================================
SENTRY_DSN=your_sentry_dsn

# ===========================================
# Crisp (실시간 채팅)
# ===========================================
NEXT_PUBLIC_CRISP_WEBSITE_ID=your_crisp_website_id

# ===========================================
# Google Play Billing (Android 앱)
# ===========================================
# Google Cloud 서비스 계정 JSON (인앱 결제 검증용)
# Google Play Console > API 액세스 > 서비스 계정 생성 후 JSON 키 내용
GOOGLE_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"...","private_key":"..."}

# Capacitor 서버 URL (앱에서 로드할 웹사이트)
CAPACITOR_SERVER_URL=https://masters-insight.ai
